<UserControl x:Class="GMS_LotteryTracker.XUControls.WarningPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GMS_LotteryTracker.XUControls"
             mc:Ignorable="d"  
             d:DesignHeight="250" d:DesignWidth="500"
             d:MaxWidth="500" d:MaxHeight="250" >
    <Border BorderBrush="Black" BorderThickness="2">
        <Grid Name="MainGrid" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Width="359" Height="148">
                <Label Name="Message_Text" Content="Are You Sure?" Margin="30,43,30,59" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" MaxWidth="282"/>
            </ScrollViewer>

            <Button Content="OK" Name="OK_Btn" Margin="0,204,146,10" HorizontalAlignment="Right" Width="102" Click="OK_Btn_Click"/>
            <Button Content="Cancel" Name="Cancel_Btn" Margin="0,204,10,10" HorizontalAlignment="Right" Width="102" Click="Cancel_Btn_Click"/>
        </Grid>
    </Border>
</UserControl>
